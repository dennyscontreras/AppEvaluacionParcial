<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="CLASIFICACIÃ“N DE IMAGEN"
        android:id="@+id/titulo"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/titulo"
        android:id="@+id/imageView"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPTURAR"
        android:layout_below="@+id/selectbtn"
        android:id="@+id/capturabtn"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECCIONE LA IMAGEN"
        android:layout_below="@+id/imageView"
        android:id="@+id/selectbtn"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREDECIR"
        android:layout_below="@+id/capturabtn"
        android:id="@+id/predictbtn"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="RESULTADO:"
        android:id="@+id/result"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/predictbtn"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>